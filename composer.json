{
    "type": "project",
    "license": "proprietary",

    "require": {
        "php": ">=7.3",
        "ext-SimpleXML": "*",
        "ext-gd": "*",
        "ext-imagick": "*",
        "ext-json": "*",
        "ext-ldap": "*",
        "ext-mbstring": "*",
        "ext-pcntl": "*",
        "ext-posix": "*",
        "ext-zip": "*",
        "catrobat/capi": "^1.0.23",
        "doctrine/data-fixtures": "^1.3",
        "doctrine/doctrine-bundle": "^1.9",
        "doctrine/doctrine-fixtures-bundle": "^3.0",
        "doctrine/doctrine-migrations-bundle": "^2.0",
        "doctrine/migrations": "^2.0",
        "doctrine/orm": "^2.6",
        "eightpoints/guzzle-bundle": "^7.3",
        "fr3d/ldap-bundle": "^4.0",
        "friendsofsymfony/jsrouting-bundle": "^2.5",
        "friendsofsymfony/rest-bundle": "^2.6",
        "friendsofsymfony/user-bundle": "^2.1",
        "google/apiclient": "^2.2",
        "incenteev/composer-parameter-handler": "^2.1",
        "knplabs/knp-paginator-bundle": "^2.8",
        "lexik/jwt-authentication-bundle": "^2.6",
        "liip/theme-bundle": "dev-master",
        "php-http/guzzle6-adapter": "^2.0",
        "php-http/message": "^1.7",
        "sensio/framework-extra-bundle": "*",
        "sonata-project/admin-bundle": "3.57",
        "sonata-project/doctrine-orm-admin-bundle": "3.13",
        "sonata-project/user-bundle": "4.5",
        "symfony/acl-bundle": "*",
        "symfony/browser-kit": "*",
        "symfony/console": "*",
        "symfony/dotenv": "*",
        "symfony/flex": "^1.2",
        "symfony/framework-bundle": "*",
        "symfony/intl": "*",
        "symfony/maker-bundle": "*",
        "symfony/monolog-bundle": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/profiler-pack": "*",
        "symfony/swiftmailer-bundle": "*",
        "symfony/twig-pack": "^1.0",
        "symfony/yaml": "*",
        "twbs/bootstrap": "4.1.3"
    },
    "require-dev": {
        "behat/behat": "^3.5",
        "behat/mink": "1.7",
        "behat/mink-extension": "^2.3",
        "behat/symfony2-extension": "^2.1",
        "bossa/phpspec2-expect": "^3.0",
        "deployer/deployer": "^6.4",
        "deployer/recipes": "^6.2",
        "dmore/behat-chrome-extension": "^1.3",
        "dmore/chrome-mink-driver": "^2.7",
        "emuse/behat-html-formatter": "@dev",
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpcheckstyle/phpcheckstyle": "^0.14.8",
        "phpspec/phpspec": "^5.1",
        "phpunit/phpunit": "^8.1",
        "symfony/phpunit-bridge": "*",
        "vipsoft/doctrine-data-fixtures-extension": "3.0.*@dev",
        "wapmorgan/php-code-fixer": "dev-master"
    },

    "conflict": {
        "symfony/symfony": "*"
    },

    "config": {
        "platform": {
            "php": "7.3",
            "ext-gd": "7.3",
            "ext-imagick": "3.4.4",
            "ext-ldap": "2.4",
            "ext-json": "1.7.0",
            "ext-mbstring": "7.3",
            "ext-pcntl": "7.3",
            "ext-posix": "7.3",
            "ext-zip": "1.15.4"
        },
        "bin-dir": "bin",
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },

    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "": "tests/"
        }
    },


    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },

        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },

    "extra": {
        "symfony": {
            "allow-contrib": false
        },
        "symfony-app-dir": "app",
        "symfony-web-dir": "public",
        "symfony-var-dir": "var",
        "symfony-bin-dir": "bin",
        "symfony-assets-install": "relative",
        "public-dir": "public"
    },
    "repositories": [{
        "type": "vcs",
        "url": "https://github.com/HCrane/CAPI"
    }]
}
