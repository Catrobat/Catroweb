{
    "type": "project",
    "license": "proprietary",

    "require": {
        "php": ">=7.2",
        "ext-SimpleXML": "^7.1",
        "ext-gd": "^7.2",
        "ext-imagick": "*",
        "ext-json": "^1.5",
        "ext-mbstring": "^7.2",
        "ext-pcntl": "^7.2",
        "ext-posix": "*",
        "ext-zip": "^1.15",
        "doctrine/data-fixtures": "^1.3",
        "doctrine/doctrine-bundle": "^1.9",
        "doctrine/doctrine-fixtures-bundle": "^3.0",
        "doctrine/doctrine-migrations-bundle": "^2.0",
        "doctrine/migrations": "^2.0",
        "doctrine/orm": "^2.6",
        "eightpoints/guzzle-bundle": "^7.3",
        "facebook/graph-sdk": "^5.7",
        "fr3d/ldap-bundle": "3.0",
        "friendsofsymfony/jsrouting-bundle": "^2.2",
        "friendsofsymfony/rest-bundle": "^2.4",
        "friendsofsymfony/user-bundle": "^2.1",
        "google/apiclient": "^2.2",
        "incenteev/composer-parameter-handler": "^2.1",
        "knplabs/knp-paginator-bundle": "^2.8",
        "liip/theme-bundle": "dev-master",
        "php-http/guzzle6-adapter": "^2.0",
        "php-http/message": "^1.7",
        "sensio/framework-extra-bundle": "^5.2",
        "sonata-project/admin-bundle": "^3.4",
        "sonata-project/doctrine-orm-admin-bundle": "^3.8",
        "sonata-project/user-bundle": "^4.3",
        "symfony/acl-bundle": "*",
        "symfony/browser-kit": "3.4.*",
        "symfony/console": "*",
        "symfony/dotenv": "3.4.*",
        "symfony/flex": "^1.2",
        "symfony/framework-bundle": "*",
        "symfony/intl": "3.4.*",
        "symfony/maker-bundle": "^1.11",
        "symfony/monolog-bundle": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/profiler-pack": "*",
        "symfony/swiftmailer-bundle": "*",
        "symfony/yaml": "*",
        "twbs/bootstrap": "4.1.3"
    },
    "require-dev": {
        "behat/behat": "^3.5",
        "behat/mink": "^1.7",
        "behat/mink-extension": "^2.3",
        "behat/symfony2-extension": "^2.1",
        "bossa/phpspec2-expect": "^3.0",
        "deployer/deployer": "^6.4",
        "deployer/recipes": "^6.2",
        "dmore/behat-chrome-extension": "^1.2",
        "emuse/behat-html-formatter": "@dev",
        "leanphp/phpspec-code-coverage": "^4.2",
        "phpcheckstyle/phpcheckstyle": "^0.14.8",
        "phpspec/phpspec": "^4.0",
        "phpunit/phpunit": "^7.3",
        "symfony/phpunit-bridge": "*",
        "vipsoft/doctrine-data-fixtures-extension": "3.0.*@dev",
        "wapmorgan/php-code-fixer": "dev-master"
    },

    "conflict": {
        "symfony/symfony": "*"
    },

    "config": {
        "bin-dir": "bin",
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },

    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "": "tests/"
        }
    },


    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
        },

        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },

    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "3.4.*"
        },
        "symfony-app-dir": "app",
        "symfony-web-dir": "public",
        "symfony-var-dir": "var",
        "symfony-bin-dir": "bin",
        "symfony-assets-install": "relative",
        "public-dir": "public"
    }
}
