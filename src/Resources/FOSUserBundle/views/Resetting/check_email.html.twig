{% extends "Default/base.html.twig" %}

{% block head %}

  <link rel="stylesheet" href="{{ asset('css/'~theme()~'/login.css') }}" media="screen"/>
  <script src="{{ asset('compiled/js/jquery-ui.js') }}"></script>

{% endblock %}

{% block header "" %}

{% block body %}

  {% block fos_user_content %}

    <div class="container-fluid" style="width:100%">

      {% include 'UserManagement/login_logo.html.twig' %}

      <div class="row justify-content-center">
        <div class="col-sm-11 col-md-8 col-lg-6 text-center" align="center">

          {% if already_reset is defined %}
          <div class="alert alert-danger" style="margin-top: 15px">
            {{ "login.alreadyReset"|trans({}, "catroweb") }}
          </div>
          {% else %}
          <div class="alert alert-success" style="margin-top: 15px">
            {{ "login.recoverPassSend"|trans({}, "catroweb") }}
          </div>
          {% endif %}

          <!-- Redirects -->
          <div>
            <div class="form-group">
              <div class="col-md-12 control">
                <div style="padding-top:15px; font-size:85%">
                  {{ 'login.alreadyAccount'|trans({}, 'catroweb') }}
                  <a id="create_account" href="{{ path('login') }}" rel="noreferrer">Log in</a>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12 control">
                <div style="font-size:85%">
                  {{ 'login.noAccount'|trans({}, 'catroweb') }}
                  <a id="create_account"
                     href="{{ path('fos_user_registration_register') }}">
                     {{ 'login.createAccount'|trans({}, 'catroweb') }}</a>
                </div>
              </div>
            </div>

            {% include 'UserManagement/or_line.html.twig' %}
          </div>

        </div>
      </div>

    </div>

    <div id="spacer1" style="margin-bottom: 30px"></div>
    {% include 'UserManagement/oauth_registration.html.twig' %}
    <div id="spacer2" style="margin-bottom: 30px"></div>


  {% endblock fos_user_content %}

{% endblock body %}