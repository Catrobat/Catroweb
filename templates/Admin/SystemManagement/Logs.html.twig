{% extends base_template %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('admin_system_management_logs') }}
{% endblock %}

{% block list_table %}
  <div id="loading-spinner" class="popup-bg" style="display: none">
    <i class="fa fa-spinner fa-pulse fa-5x fa-fw"></i>
  </div>
  <div class="col-xs-12 col-md-12" xmlns="http://www.w3.org/1999/html">
    <div class="box box-primary">
      <div class="box-body table-responsive no-padding">
        {% if files|length > 0 %}

          <div id="logFilesContainer">
            <h5>Log files:</h5>
            <ul id="logFiles">
              {% for file in files %}
                <li>
                  <button class="chipButton files" value="{{ file }}">{{ file }}</button>
                </li>
              {% endfor %}
            </ul>
          </div>

          <div id="filterContainer">
            <h5>Filters:</h5>
            <div class="filter-controls">
              <div class="filter-group">
                <label>Level:</label>
                <button class="filter-btn active" data-filter-type="level" data-filter-value="all">All</button>
                <button class="filter-btn level-critical" data-filter-type="level" data-filter-value="CRITI">Critical</button>
                <button class="filter-btn level-error" data-filter-type="level" data-filter-value="ERROR">Error</button>
                <button class="filter-btn level-warning" data-filter-type="level" data-filter-value="WARNING">Warning</button>
                <button class="filter-btn level-info" data-filter-type="level" data-filter-value="INFO">Info</button>
                <button class="filter-btn level-debug" data-filter-type="level" data-filter-value="DEBUG">Debug</button>
              </div>
              <div class="filter-group">
                <label>Search:</label>
                <input type="text" id="searchInput" placeholder="Search logs..." class="search-input">
              </div>
            </div>
          </div>

          <div id="outerLogContainer">
            <div id="innerLogContainer">
              {% for line in content %}
                  <div class='log-entry' data-level="{{ line.level }}" data-channel="{{ line.channel }}" data-user="{{ line.user }}" data-ip="{{ line.ip }}">
                      <div class="log-header level-{{ line.level|lower }}">
                          <div class="log-header-main">
                              <span class="log-level-badge level-{{ line.level|lower }}">{{ line.level }}</span>
                              <span class="log-channel-badge">{{ line.channel }}</span>
                              <span class="log-datetime">{{ line.datetime }}</span>
                              {% if line.user and line.user != 'anonymous' %}
                                  <span class="log-user">üë§ {{ line.user }}</span>
                              {% endif %}
                              {% if line.ip %}
                                  <span class="log-ip">üåê {{ line.ip }}</span>
                              {% endif %}
                          </div>
                          <div class="log-message-preview">{{ line.message }}</div>
                      </div>
                      <div class="log-details hide">
                          <div class="log-details-content">
                              <div class="log-section">
                                  <strong>Message:</strong>
                                  <pre class="log-message">{{ line.message }}</pre>
                              </div>
                              {% if line.stacktrace %}
                                  <div class="log-section">
                                      <strong>Stack Trace:</strong>
                                      <pre class="log-stacktrace">{{ line.stacktrace }}</pre>
                                  </div>
                              {% endif %}
                              {% if line.context %}
                                  <div class="log-section">
                                      <strong>Context:</strong>
                                      <pre class="log-context">{{ line.context }}</pre>
                                  </div>
                              {% endif %}
                              {% if line.extra %}
                                  <div class="log-section">
                                      <strong>Extra:</strong>
                                      <pre class="log-extra">{{ line.extra }}</pre>
                                  </div>
                              {% endif %}
                          </div>
                      </div>
                  </div>
              {% endfor %}
            </div>

            <div id="currentFileContainer">
              <h5>Current file: <span id="currentFileName">{{ files[0] }}</span></h5>
              <form action="/admin/downloadLogs/" method="post">
                <input id="currentFile" name="file" type="hidden" value="{{ files[0] }}">
                <input value="Download" type="submit" formtarget="_blank" class="btn">
              </form>
            </div>
          </div>

        {% else %}
          <h4>No log files found!</h4>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('admin_system_management_logs') }}
{% endblock %}
