{% extends base_template %}

{% block stylesheets %}
  {{ parent() }}
  {{ encore_entry_link_tags('admin_user_communication_broadcast_notification') }}
{% endblock %}

{% block list_table %}
  <div class="col-xs-12 col-md-12">
    <div class="box box-primary">
      <div class="box-body table-responsive no-padding">

        <h3>Broadcast Notifications</h3>

        <p>This tool allows you to send Notifications to all users.</p>

        <div class="mtable">

          <div class="lrow">
            Message:
          </div>
          <div class="rrow">
            <textarea id="msg" style="width: 100%; height: 100px"></textarea>
          </div>

          <div class="lrow">
            Submit:
          </div>
          <div class="rrow">
            <input type="button" class="btn" value="Send notifications"/>
          </div>

          <div class="lrow">
            Result:
          </div>
          <div class="rrow resultBox error">

          </div>
        </div>

      </div>
    </div>
  </div>

  {{ encore_entry_script_tags('admin_user_communication_broadcast_notification') }}
{% endblock %}
