{% extends base_template %}

{% block list_table %}

  <style>
    h3
    {
      margin-left: 20px;
    }

    p
    {
      margin-left: 20px;
    }

    .mtable
    {
      display: table;
      margin-left: 20px;
      margin-bottom: 30px;
      width: 95%;
    }

    .lrow
    {
      width: 150px;
      line-height: 28px;
      display: table-row;
      float: left;
      clear: both;
    }

    .rrow
    {
      display: table-row;
      float: left;
      margin-bottom: 10px;
      width: 500px;
    }

    .error
    {
      color: red;
    }

    .success
    {
      color: green;
    }
  </style>

  <div class="col-xs-12 col-md-12">
    <div class="box box-primary">
      <div class="box-body table-responsive no-padding">

        <h3>Broadcast Notifications</h3>

        <p>This tool allows you to send Notifications to all users.</p>

        <div class="mtable">

          <div class="lrow">
            Message:
          </div>
          <div class="rrow">
            <textarea id="msg" style="width: 100%; height: 100px"></textarea>
          </div>

          <div class="lrow">
            Submit:
          </div>
          <div class="rrow">
            <input type="button" class="btn" value="Send notifications"/>
          </div>

          <div class="lrow">
            Result:
          </div>
          <div class="rrow resultBox error">

          </div>
        </div>

      </div>
    </div>
  </div>

  <script src="{{ asset('js/AdminBroadcastNotification.min.js') }}"></script>
  <script>
    new AdminBroadcastNotification()
  </script>
{% endblock %}

