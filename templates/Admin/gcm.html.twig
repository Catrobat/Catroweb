{% extends base_template %}

{% block list_table %}

  <style>
    h3
    {
      margin-left: 20px;
    }

    p
    {
      margin-left: 20px;
    }

    .mtable
    {
      display: table;
      margin-left: 20px;
      margin-bottom: 30px;
      width: 95%;
    }

    .lrow
    {
      width: 150px;
      line-height: 28px;
      display: table-row;
      float: left;
      clear: both;
    }

    .rrow
    {
      display: table-row;
      float: left;
      margin-bottom: 10px;
      width: 500px;
    }

    .error
    {
      color: red;
    }

    .success
    {
      color: green;
    }
  </style>

  <div class="col-xs-12 col-md-12">
    <div class="box box-primary">
      <div class="box-body table-responsive no-padding">

        <h3>Send Push Notifications</h3>

        <p>This tool allows you to send push notifications through the Google Cloud Messaging service.</p>

        <div class="mtable">
          <div class="lrow">
            Google API Key:
          </div>
          <div class="rrow">
            <input type="text" placeholder="AIzaSyBQ_twWkH1fcT8Gt2R4DQHgmtX2wzD7vj0" class="apikey"
                   style="width: 100%"/>
          </div>

          <div class="lrow">
            Notification:
          </div>
          <div class="rrow">
            <textarea class="msg" style="width: 100%; height: 100px"></textarea>
          </div>

          <div class="lrow">
            Submit:
          </div>
          <div class="rrow">
            <input type="button" class="btn" value="Send notification"/>
          </div>

          <div class="lrow">
            Result:
          </div>
          <div class="rrow resultBox error">

          </div>
        </div>

      </div>
    </div>
  </div>

  <script src="{{ asset('js/AdminGCM.min.js') }}"></script>
  <script>
    new AdminGCM()
  </script>
{% endblock %}

