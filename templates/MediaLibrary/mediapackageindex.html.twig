{% extends 'Default/base.html.twig' %}

{% block head %}
  <link rel="preload" href="{{ asset('build/css/medialib.css') }}" as="style">
  <link rel="stylesheet" href="{{ asset('build/css/medialib.css') }}" media="screen"/>
{% endblock %}

{% block body %}
  <div>
    <h2>{{ "media-packages.title"|trans({}, "catroweb") }}</h2>
    <p>{{ "media-packages.description"|trans({}, "catroweb") }}</p>
  </div>
  <div class="card-deck-wrapper">
    <div class="card-deck mx-auto">
      {% for item in packages %}
        <div class="card">
          <div class="card-header">Test</div>
          <div class="card-body">
            <h4 class="card-title"><a
                  href="{{ path('media_library', {'package_name': item.nameUrl}) }}">{{ item.name }}</a></h4>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}

{% block js %}

{% endblock %}
