{% extends 'User/Notification/Type/Base.html.twig' %}

{% block notification_leftAvatar %}
  <a href="{{ path('profile', {id: notification.program.user.id}) }}">
    <img class="notification-avatar-img"
         src="{% if notification.program.user.avatar is not empty %}{{ notification.program.user.avatar }}
                        {% else %}{{ asset('images/default/avatar_default.png') }}{% endif %}"
         alt="{{ notification.program.user.username }}">
  </a>
{% endblock %}

{% block notification_body %}
  {{ 'catro-notifications.project-upload.message'|trans
    (
    {
      '%user_link%': '<a href="' ~ path('profile', {id: notification.program.user.id|escape}) ~ '">' ~ notification.program.user.username|escape ~ '</a>',
      '%program_link%': '<a href="' ~ path('program', {id: notification.program.id|escape}) ~ '">' ~ notification.program.name|escape ~ '</a>',
    },
    'catroweb',
  )
  |raw }}
{% endblock %}
