{% extends 'User/Notification/Type/Base.html.twig' %}

{% block notification_leftAvatar %}
  <div class="col-2 my-auto">
    <a href="{{ path('profile', {id: notification.getRemixFrom.id}) }}">
      <img class="img-fluid notification-avatar-round"
           src="{% if notification.getRemixFrom.avatar is not empty %}{{ notification.getRemixFrom.avatar }}
                          {% else %}{{ asset('images/default/avatar_default.png') }}{% endif %}"
           alt="">
    </a>
  </div>
{% endblock %}

{% block notification_body %}
  <div class="col-8 ps-3 my-auto">
    {{ 'catro-notifications.remix.message'|trans
      (
      {
        '%user_link%': '<a href="' ~ path('profile', {id: notification.getRemixFrom.id|escape}) ~ '">' ~ notification.getRemixFrom.getUserName|escape ~ '</a>',
        '%program_link%': '<a href="' ~ path('program', {id: notification.getRemixProgram.id|escape}) ~ '">' ~ notification.getRemixProgram.name|escape ~ '</a>',
        '%remix_program_link%': '<a href="' ~ path('program', {id: notification.program.id|escape}) ~ '">' ~ notification.program.name|escape ~ '</a>'
      },
      'catroweb'
    )
    |raw }}
  </div>
{% endblock %}
