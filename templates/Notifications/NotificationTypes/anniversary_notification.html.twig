{% extends 'Notifications/NotificationTypes/notification_items.html.twig' %}

{% block notification_leftAvatar %}
  <div class="col-2 col-sm-1 my-auto">
    <span class="material-icons broadcast-icon">
      cake
    </span>
  </div>
{% endblock %}

{% block notification_body %}
  <div class="col-8 col-sm-8 pl-3 my-auto">
    <div class="message">
      {{ notification.message }}
    </div>
    <div class="prize">
      {{ notification.prize }}
    </div>
  </div>
{% endblock %}