{% if package|default and ('/media-library/' in app.request.pathinfo or '/pocket-library/' in app.request.pathinfo) %}

  <div id="top-app-bar__media-library-download" class="mdc-top-app-bar__row" style="display: none;">

    <section class="mdc-top-app-bar__section mdc-top-app-bar__section--align-start">
      <button id="top-app-bar__btn-cancel-download-selection"
              class="material-icons mdc-top-app-bar__action-item mdc-icon-button"
              aria-label="Cancel Download">
        close
      </button>
      <span id="top-app-bar__download-nr-selected" class="mdc-top-app-bar__title">1</span>
    </section>

    <section class="mdc-top-app-bar__section mdc-top-app-bar__section--align-end">
      <button id="top-app-bar__btn-download-selection"
              class="material-icons mdc-top-app-bar__action-item mdc-icon-button"
              aria-label="Cancel Download">
        get_app
      </button>
    </section>
  </div>

{% endif %}
