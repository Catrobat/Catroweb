{% extends "Default/base.html.twig" %}

{% block head %}
  {{ encore_entry_link_tags('reset') }}
{% endblock %}

{% block header "" %}

{% block body %}

  {% block fos_user_content %}

    <div class="container-fluid" style="width:100%">

      {% include 'UserManagement/login_logo.html.twig' %}

      <!-- Policy -->
      {% include 'PrivacyAndTerms/policy.html.twig' %}

      <div class="row justify-content-center">
        <div class="col-sm-11 col-md-8 col-lg-6 center">

          <form id="reset-form form_fos" class="form-horizontal"
                action="{{ path('fos_user_resetting_reset', {'token': token}) }}" method="post">
            {{ form_start(form) }}

            {% for errorItem in form.plainPassword.first.vars.errors %}
              <div id="signupalert" style="display:block" class="alert alert-danger">{{ errorItem.message }}</div>
            {% endfor %}

            <input type="hidden" id="fos_user_resetting_form__token" name="fos_user_resetting_form[_token]"
                   value="{{ form.children._token.vars.value }}">

            <div class="show-hide-password">
              <label class="mdc-text-field mdc-text-field--filled password-first">
                <span class="mdc-text-field__ripple"></span>
                {{ form_widget(form.plainPassword.first, {'attr': {'class':'mdc-text-field__input', 'aria-labelledby': 'password-first-label', 'id': 'password-first' }}) }}
                <span class="mdc-icon-button material-icons pw-toggler">visibility</span>
                <span class="mdc-floating-label" id="password-first-label">{{ 'profile.newPass'|trans({}, 'catroweb') }}</span>
                <span class="mdc-line-ripple"></span>
              </label>
            </div>

            <div class="show-hide-password mt-3">
              <label class="mdc-text-field mdc-text-field--filled password-second">
                <span class="mdc-text-field__ripple"></span>
                {{ form_widget(form.plainPassword.second, {'attr': {'class':'mdc-text-field__input', 'aria-labelledby': 'password-second-label', 'id': 'password-second' }}) }}
                <span class="mdc-icon-button material-icons pw-toggler">visibility</span>
                <span class="mdc-floating-label" id="password-second-label">{{ 'profile.repeatPass'|trans({}, 'catroweb') }}</span>
                <span class="mdc-line-ripple"></span>
              </label>
            </div>

            <input type="hidden" name="_target_path" value="{{ path('index') }}"/>

            <!-- Button -->
            <div style="margin-top:30px; margin-bottom:30px" class="form-group">
              <div class="col-sm-12 controls">
                <button id="_submit" type="submit" style="width: 100%;" data-bs-toggle="modal" data-bs-target="#termsModal"
                        class="login btn btn-primary"
                        name="_create">{{ "login.changePass"|trans({}, "catroweb") }}</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

  {% endblock fos_user_content %}

{% endblock body %}

{% block js %}
  <script src="{{ asset('js/modules/jquery.min.js') }}"></script>
  <script src="{{ asset('js/modules/bootstrap.min.js') }}"></script>
  <script src="{{ asset('js/PasswordVisibilityToggler.js') }}"></script>
  {{ encore_entry_script_tags('reset') }}
{% endblock js %}
