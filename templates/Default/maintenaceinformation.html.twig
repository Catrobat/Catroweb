<style>
    .maintenance {
        border: 1px solid #333;
        border-radius: 10px;
        padding: 10px;
        background-color: #f0f0f0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 10px;
        transition: box-shadow 0.9s;
    }

    .maintenance:hover {
        transform: scale(1.03);
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    .maintenance-content {
        display: flex;
        flex-direction: column; /* Stack content vertically */

    }

    .maintenance-text {
        display: flex;
        align-items: center;
        margin-right: 10px;
    }

    .bold-text {
        font-weight: bold;
    }

    .additional-info {
        font-size: 14px;
        color: #333;
    }

    .maintenance-icon {
        font-size: 24px;
        color: #0097a7; /* Change icon color */
        margin-right: 10px;
    }

    .material-icons {
        font-family: 'Material Icons', sans-serif;
    }

    .close-button {
        background: none;
        border: none;
        padding: 0;
        font: inherit;
        cursor: pointer;
        outline: inherit;
    }

    .close-button:hover {
        font-weight: bold;
    }

    .material-icons.md-48 {
        font-size: 26px;
        color: #0097a7;
    }


    .expand-button {
        font-size: 24px;
        cursor: pointer;
        transition: transform 0.3s;
        top: 50%;
        right: 10px;
    }

    .expanded {
        transform: rotate(180deg); /* Rotate the arrow when expanded */
    }

    /* Style for the additional information section (initially hidden) */
    .additional-info-section {
        display: none;
        background-color: #f0f0f0; /* Use the same background color */
        margin-top: 10px;
        padding: 10px;
        transition: display 0.3s;
    }
</style>

<div class="maintenance">
    <div class="maintenance-content">
        <div class="maintenance-text">
            <div class="maintenance-icon">
                <i class="material-icons md-48">{{ icon }}</i>
            </div>
            {% set translationParams = {} %}
            {% if maintenanceStart is not null %}
                {% set translationParams = translationParams|merge({
                    'maintenanceStart': '<span class="maintenanceStart-start-date bold-text">' ~ maintenanceStart.format('Y-m-d') ~ '</span>'
                }) %}
            {% endif %}
            {% if maintenanceEnd is not null %}
                {% set translationParams = translationParams|merge({
                    'maintenanceEnd': '<span class="maintenanceStart-end-date bold-text">' ~ maintenanceEnd.format('Y-m-d') ~ '</span>'
                }) %}

            {% endif %}
            {% if featureName is defined %}
                {% set translationParams = translationParams|merge({
                    'featureName': '<span class="maintenance-feature-name bold-text">' ~ featureName ~ '</span>'
                }) %}
            {% endif %}
            <span>
                {{ (code)|trans(translationParams, "catroweb")|raw }}
            </span>
            {% if additionalInfo is not null %}
            <div class="expand-button" data-id="{{ code }}">
                <i class="material-icons">arrow_drop_down</i>
            </div>
            {% endif %}
        </div>
        {% if additionalInfo is not null %}
            <div class="additional-info-section" id="additional-info-{{ code }}">
             <span>
                      {% set translationParams = translationParams|merge({
                          'additionalInfo': '<span class="maintenance-additionalinfo-text  bold-text">' ~ additionalInfo ~ '</span>'
                      }) %}
                {{ 'maintenanceinformations.maintenance_information.additional_info'|trans(translationParams, "catroweb")|raw}}
             </span>
            </div>
        {% endif %}
    </div>
    <button class="close-button">
        <i class="material-icons md-48">close</i> <!-- Use the close icon here -->
    </button>
</div>


