<div id="details">

  <h2 class="mt-3">
    {{ "programDetails"|trans({}, "catroweb") }}
  </h2>

  <div class="row">
    <div class="col-6 col-lg-4 mt-2 mb-2 no-overflow">
      <i class="material-icons">visibility</i>
      <span class="icon-text ms-2 align-bottom">{{ "programs.views"|trans({ '%views%' : program_details.views }, "catroweb") }}</span>
    </div>
    <div class="col-6 col-lg-4 mt-2 mb-2 no-overflow">
      <i class="material-icons">query_builder</i>
      <span class="icon-text ms-2 align-bottom">{{ program_details.age }}</span>
    </div>
    <div class="d-none d-lg-block col-lg-4">
      {% include 'components/redirect_button.twig' with {
        'id': 'projectCodeStatsButton',
        'url': path('code_statistics', {'id': program.id }),
        'icon': 'show_chart',
        'text': "statistics"|trans({}, "catroweb")
      } %}
    </div>
  </div>

  <div class="row">
    <div class="col-6 col-lg-4 mt-2 mb-2 no-overflow mt-lg-3">
      <i class="material-icons">description</i>
      <span class="icon-text ms-2">{{ program_details.filesize }} MB</span>
    </div>
    <div class="col-6 col-lg-4 mt-2 mb-2 no-overflow mt-lg-3">
      <i class="material-icons ">get_app</i>
      <span class="icon-text ms-2">{{ "programs.downloads"|trans({ '%downloads%' : program_details.downloads }, "catroweb") }}</span>
    </div>
    <div class="d-none d-lg-block col-lg-4 mt-2">
      {% include 'components/redirect_button.twig' with {
        'id': 'projectCodeViewButton',
        'url': path('code_view', {'id': program.id }),
        'icon': 'extension',
        'text': "codeview.title"|trans({}, "catroweb")
      } %}
    </div>
  </div>
  {% if app.user and not my_program %}
    <div class="row justify-content-end">
      <div class="d-none d-lg-block col-lg-4 mt-3" style="margin-left: auto">
        <button class="btn btn-outline-primary btn-block js-redirect-button" id="stealProgramButton" data-url="{{ path('steal_program', {'id': program.id}) }}" data-id="{{ program.id }}" formmethod="post">
          {{ "programs.steal"|trans({}, "catroweb") }}
        </button>
      </div>
    </div>
  {% endif %}
  <div class="row mb-4">
    <div class="col-6 mb-3 d-lg-none mt-3">
      {% include 'components/redirect_button.twig' with {
        'id': 'projectCodeStatsButton',
        'suffix': '-small',
        'url': path('code_statistics', {'id': program.id }),
        'icon': 'show_chart',
        'text': "statistics"|trans({}, "catroweb")
      } %}
    </div>
    <div class="col-6 mb-3 d-lg-none mt-3">
      {% include 'components/redirect_button.twig' with {
        'id': 'projectCodeViewButton',
        'suffix': '-small',
        'url': path('code_view', {'id': program.id }),
        'icon': 'extension',
        'text': "codeview.title"|trans({}, "catroweb")
      } %}
    </div>
  </div>

</div>
