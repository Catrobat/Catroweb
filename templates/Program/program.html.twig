    new ProgramReport({{ program.id }}, '{{ path('catrobat_api_report_program') }}', '{{ url('login') }}',
      "{{ 'success.report'                          |trans({}, 'catroweb') }}",
      '{{ "error"                                   |trans({}, "catroweb") }}',
      '{{ "programs.report"                         |trans({}, "catroweb") }}',
      '{{ "cancel"                                  |trans({}, "catroweb") }}',
