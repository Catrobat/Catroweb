<div>
  <button id="apk-generate{{ suffix|default('') }}"
          class="btn btn-outline-primary btn-block">
    <i class="material-icons align-bottom">casino</i>
    <span>{{ "apk.prepare"|trans({}, "catroweb") }}</span>
  </button>
</div>

<div>
  <button id="apk-pending{{ suffix|default('') }}"
          class="btn btn-outline-primary btn-block d-none">
    <i class="material-icons align-bottom text-start">
      {% include 'components/loading_spinner.html.twig' with {'spinner_id': 'apk-progressbar' ~ suffix|default(), 'size': 'small'} %}
    </i>
    <span>{{ "apk.preparing"|trans({}, "catroweb") }}</span>
  </button>
</div>

<div>
  <button id="projectApkDownloadButton{{ suffix|default('') }}" class="btn btn-outline-primary btn-block d-none js-btn-project-apk-download"
          data-button-id='#projectApkDownloadButton{{ suffix|default('') }}'
          data-project-id='{{ program.id }}'
          data-path-url='{{ path('ci_download', { 'id': program.id }) }}'
          data-spinner='#projectApkDownloadButton__loadingSpinner{{ suffix|default('') }}'
          data-icon='#projectApkDownloadButton__icon{{ suffix|default('') }}'
          data-is-webview='{% if isWebview() %}true{% else %}false{% endif %}'
          data-is-supported='{% if not isIOS() %}true{% else %}false{% endif %}'
          data-is-not-supported-title="{{ 'programs.updateAppHeaderDownload'|trans({}, 'catroweb')}}"
          data-is-not-supported-text="{{ 'programs.updateAppTextDownloadApk'|trans({}, 'catroweb')}}"
  >
  <i class="material-icons text-start d-none">
      {% include 'components/loading_spinner.html.twig' with {'spinner_id': 'download-spinner' ~ suffix|default(), 'size': 'small'} %}
    </i>
    <i class="material-icons align-bottom">casino</i>
    <span>{{ "apk.download"|trans({}, "catroweb") }}</span>
  </button>
</div>

<i class="material-icons text-start d-none" id="apk-pb{{ suffix|default('') }}">
  {% include 'components/loading_spinner.html.twig' with {'spinner_id': 'download-progressbar' ~ suffix|default(), 'size': 'small'} only %}
</i>
