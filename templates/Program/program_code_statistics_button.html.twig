<button id="code-statistics{{ suffix|default('') }}"
        class="btn btn-outline-primary btn-block js-redirect-button"
        data-url='{{ path('code_statistics', {'id': program.id }) }}'
        data-spinner='#code-statistics-button-spinner{{ suffix|default('') }}'
        data-icon='#code-statistics-icon{{ suffix|default('') }}'>

  <i class="material-icons d-none text-start" id="code-statistics-button-spinner{{ suffix|default('') }}">
    {% include 'components/loading_spinner.html.twig' with {'spinner_id': 'code-statistics-spinner' ~ suffix|default(), 'size': 'small'} %}
  </i>
  <i class="material-icons align-bottom" id="code-statistics-icon{{ suffix|default('') }}">show_chart</i>
  <span>{{ "statistics"|trans({}, "catroweb") }}</span>
</button>
