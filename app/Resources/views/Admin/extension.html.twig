{% extends base_template %}

{% block content %}
    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <div class="col-md-6">
            <div class="box">
                <h3 class="box-header">Create Extensions</h3>
                <div class="box-body">
                    <div class="info-box">
                        <div class="info-box-icon"><i class="glyphicon glyphicon-info-sign"></i></div>
                        <div class="info-box-content">
                            This will delete the links between extensions and programs. Then creating new links, by scanning all uploaded programs. <br/>
                            If you want to create extensions from existing programs, please push button below!<br/>
                    </div>

                    <div class="box">
                        <div class="box-header">
                            <a id="btnCreateBackup" class="btn btn-sm btn-default" style="min-width:20%;" href="{{ url }}">
                                <i class="glyphicon glyphicon-refresh"></i>
                                Create extensions
                            </a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}