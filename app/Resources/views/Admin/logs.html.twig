{% extends base_template %}

{% block list_table %}
<div class="col-xs-12 col-md-12" xmlns="http://www.w3.org/1999/html">
    <div class="box box-primary">

        <style type="text/css">
            .btn {margin-top: 2px;
                margin-left: 2px;}
            .nomargin {margin: 0px; !important}
        </style>
        <div class="box-body table-responsive no-padding">

            <div id="logFiles">
                {% for file in files %}
                    <button id="{{ file|replace({".":'_'}) }}" class="btn files">
                        {{ file }}
                    </button>
                {%  endfor %}
            </div>

            <button data-toggle="collapse" data-target="#searchOptions" class="btn panel-heading">Search options</button>

            <div id="searchOptions" class="collapse container nomargin">
                <div class="row">
                    <div class="col-lg-2  col-md-2">
                        <label>Numbers of log lines</label>
                        <input type="number" id="lineNumber" name="number of lines:" value="20"/>
                    </div>

                    <div class="form-group col-lg-2  col-md-2">
                        <label for="sel1">Select Log-Level:</label>
                        <select name="logLevel" id="logLevelSelect">
                            <option value="0">Debug</option>
                            <option value="1">Info</option>
                            <option value="2">Notice</option>
                            <option value="3">Warning</option>
                            <option value="4">Error</option>
                            <option value="5">Critical</option>
                            <option value="6">Alert</option>
                            <option value="7">Emergency</option>
                        </select>
                    </div>
                    <div class="col-lg-3  col-md-3">
                        <div class="radio">
                            <label><input type="radio" id="greaterEqual" class="greaterThanRB" name="greaterThan" value=true checked="checked"/>Starting from Log-Level</label>
                        </div>
                        <div class="radio">
                            <label><input type="radio" id="equal" class="greaterThanRB" name="greaterThan" value=false/>Only this Log-Level</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <button id="search" class="btn">
                            Search
                        </button>
                        <i id="searchIcon" class="fa fa-spinner fa-pulse fa-fw" style="display:none"></i>
                    </div>
                </div>
            </div>

            <div id="outerLogContainer">
                <div id="innerLogContainer">
                    {% for i in 0..(files|length-1)  %}
                    <div {% if i!=0 %} style='display:none' {% endif %} class='{{ files[i]|replace({".":'_'}) }} logs'>

                        {% for j in 0..(content[i]|length-1) %}
                            {% if content[i][j] != "" %}
                                <div class="panel-heading">
                                    <a data-toggle="collapse" href="#toggle_{{ i }}_{{ j }}">
                                        {{ content[i][j].date }}
                                        {{ content[i][j].debug_code }}
                                    </a>
                                </div>
                                <div id="toggle_{{ i }}_{{ j }}" class="panel-collapse collapse">
                                    <div class="panel-body ">
                                        {{ content[i][j].msg }}
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}

                    </div>
                {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).on('click', '.files', function() {
        $('.logs').hide();
        $('.'+$(this).attr('id')).show();
    });

    $(document).on('click', '#search', function() {
        $('#searchIcon').show();
        $.ajax({
            type: "get",
            data:{count:lineNumber.value, filter: $('#logLevelSelect').val(), greaterThan: $('.greaterThanRB:checked').val()},
            success: function(data) {
                 $('#searchIcon').hide();
                 var innerLogContainerString = $('<div>',{html:data}).find('#innerLogContainer');
                 $('#outerLogContainer').html(innerLogContainerString);
            },
            error: function(data) {
                $('#searchIcon').hide();
                alert("something went terribly wrong");
            }});
    })
</script>
{% endblock %}

