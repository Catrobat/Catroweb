{% extends ':Default:base.html.twig' %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('css/'~theme()~'/help.css') }}" media="screen"/>
{% endblock %}


{% block body %}
    {#<h1>{{ ("teachers.login.title")|trans({}, "catroweb") }}</h1>#}
    <h1>Teachers</h1>

    <form method="POST" action="teachersTemplatePostUpload" enctype="multipart/form-data">
        <div id="teachers-login-container" style="text-align:center;line-height: 55px;">
            <div class="size-large">
                {#{{ ("teachers.login.description")|trans({}, "catroweb") }}#}
                You may UPLOAD templates here. Choose a templates.zip file to proceed:
            </div>
            <div>
                <input type="file" name="templates" id="templates" onchange="javascript:this.form.submit()" />
            </div>
            <div class="size-large">
                <a href="teachersLogout">Logout from teachers area</a>
            </div>
        </div>
    </form>

{% endblock %}

{% block js %}
    <script src="{{ asset('js/custom/Help.js') }}"></script>
{% endblock %}
