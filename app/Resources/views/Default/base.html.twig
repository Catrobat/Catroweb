  var client = new Main('{{ path('search', {'q': 0 } ) }}');
</script>
<script src=" {{ asset('compiled/bootstrap/bootstrap.min.js') }}"></script>

{% block js %}{% endblock %}

<script>
  (function(i, s, o, g, r, a, m)
  {
    i['GoogleAnalyticsObject'] = r;
    i[r] = i[r] || function()
