{% extends ":Default:base.html.twig" %}

{% block head %}
  <link rel="stylesheet" href="{{ asset('css/'~theme()~'/login.css') }}" media="screen"/>
{% endblock %}

{% block header %}
  {% include ':Default:headerLogo.html.twig' %}
{% endblock header%}

{% block body %}

  {% block fos_user_content %}

    <div class="container" style="width:100%">
      <div id="request-box" style="margin-top:50px;" class="mainbox col col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
          <div class="panel-heading">
            <div class="panel-title">Reset password</div>
          </div>

          <div style="padding-top:30px" class="panel-body">

            {% if invalid_username is defined %}
              <div id="request-alert"
                   class="alert alert-danger col-sm-12">{{ "login.noUsername"|trans({}, "catroweb")}}</div>
            {% endif %}

            <form id="request-form form_fos" class="form-horizontal fos_user_resetting_request" role="form"
                  action="{{ path('fos_user_resetting_send_email') }}" method="post">

              <div style="margin-bottom: 25px" class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <input type="text" id="username" class="form-control" name="username" placeholder="{{ "login.userOrEmail"|trans({}, "catroweb") }}" />
              </div>

              <div style="margin-top:10px" class="form-group">
                <!-- Button -->
                <div class="col-sm-12 controls">
                  <button id="recover" class="btn btn-success" name="recover">{{ "login.recoverPass"|trans({}, "catroweb") }}</button>
                </div>
              </div>

              <div class="form-group">
                <div class="col-md-12 control">
                  <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                    Already having an account?
                    <a id="create_account"
                       href="{{ path('login') }}">Log in</a>
                  </div>
                  <div style="padding-top:15px; font-size:85%">
                    Don't have an account!
                    <a id="create_account"
                       href="{{ path('register_form') }}">{{ 'login.createAccount'|trans({}, 'catroweb') }}</a>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

  {% endblock fos_user_content %}

{% endblock body %}