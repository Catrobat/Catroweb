{% extends ":Default:base.html.twig" %}

{% block head %}

  <link rel="stylesheet" href="{{ asset('css/'~theme()~'/login.css') }}" media="screen"/>
  <script src="{{ asset('js/jquery-ui/jquery-ui.js') }}"></script>
  <script src="{{ asset( getJavascriptPath('loginscript.js') ) }}"></script>

{% endblock %}

{% block header "" %}

{% block body %}

  {% block fos_user_content %}

    <div class="container-fluid" style="width:100%">

      {% include ':components/login:login_logo.html.twig' %}

      <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
          {% if invalid_username is defined %}
            <div id="request-alert"
                 class="alert alert-danger col-sm-12">{{ "login.noUsername"|trans({}, "catroweb") }}
            </div>
          {% endif %}
        </div>
      </div>

      <div class="row">
        <div class="col-sm-4 col-sm-offset-4">

          <!-- Policy -->
          {% include ':privacy_policy:policy.html.twig' %}

          <form id="request-form form_fos" class="form-horizontal fos_user_resetting_request" role="form"
                action="{{ path('fos_user_resetting_send_email') }}" method="post">

            <div class="row">
              <div class="col">

                <div class="group">
                  <input type="text" id="username" name="username" required/>
                  <span class="highlight"></span>
                  <span class="bar"></span>
                  <label><span
                        class="span-input">{{ "login.userOrEmail"|trans({}, "catroweb") }}</span></label>
                </div>

                <!-- Button -->
                <div style="margin-top:30px; margin-bottom:30px" class="form-group">
                  <div class="col-sm-12 controls">
                    <button id="recover" style="width: 100%;" class="login btn-primary"
                            name="recover">{{ "login.recoverPass"|trans({}, "catroweb") }}</button>
                  </div>
                </div>

                <!-- Redirects -->
                <div>
                  <div class="form-group">
                    <div class="col-md-12 control">
                      <div style="padding-top:15px; font-size:85%">
                        {{ 'login.alreadyAccount'|trans({}, 'catroweb') }}
                        <a id="create_account" href="{{ path('login') }}">Log in</a>
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-md-12 control">
                      <div style="font-size:85%">
                        {{ 'login.noAccount'|trans({}, 'catroweb') }}
                        <a id="create_account"
                           href="{{ path('register_form') }}">{{ 'login.createAccount'|trans({}, 'catroweb') }}</a>
                      </div>
                    </div>
                  </div>

                  {% include ':components/login:or_line.html.twig' %}
                </div>

              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div id="spacer1" style="margin-bottom: 30px"></div>
    {% include ':social:oauth_form.html.twig' %}
    <div id="spacer2" style="margin-bottom: 30px"></div>

  {% endblock fos_user_content %}

{% endblock body %}

{% block js %}
  <script src="{{ asset('js/custom/social.js') }}"></script>
{% endblock %}